{
    "autoDocstring.docstringFormat": "sphinx",
    "autoDocstring.generateDocstringOnEnter": true,
    "autoDocstring.includeExtendedSummary": false,
    "autoDocstring.includeName": false,
    "autoDocstring.startOnNewLine": true, //New line before summary placeholder
    "autoDocstring.guessTypes": true,
    "autoDocstring.quoteStyle": "\"\"\"",

    "gitlens.codeLens.scopes": [
        "document"
    ],

    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontWeight": "450", // 300 light, 400 regular, 500 medium, 600 bold
    "editor.minimap.enabled": true,
    "editor.rulers": [
        79,
        88,
        100,
    ],
    "editor.suggestSelection": "first",

    "java.home": "/home/gaius/.local/java/jdk-14.0.2+12/",
    "jupyter.interactiveWindowMode": "perFile",
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
    },
    "pylance.insidersChannel": "daily",
    "python.analysis.completeFunctionParens": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.formatting.provider": "black",
    "python.languageServer": "Pylance",
    
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "vsintellicode.features.python.deepLearning": "enabled",
    "window.menuBarVisibility": "default",
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Monokai",
    "workbench.statusBar.visible": true,
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "liveshare.authenticationProvider": "GitHub",
    "workbench.iconTheme": "material-icon-theme",
    
